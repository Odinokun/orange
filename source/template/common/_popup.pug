// begin popup
.layerBox
.popupBox.feedback
  .popupInn
    .close
      svg
        use(xlink:href="assets/img/sprite.svg#close")
    .top_block
      svg
        use(xlink:href="assets/img/sprite.svg#message")
      h3 Обратная связь
    .formBox
      form(action='#', method='post')
        h4 Имя*
        .inputBox
          input(type='text')
        h4 E-mail*
        .inputBox
          input(type='text')
        h4 Телефон
        .inputBox.error
          input(type='text')
